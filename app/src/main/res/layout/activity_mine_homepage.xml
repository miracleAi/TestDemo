<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
  android:gravity="center_horizontal">
  <ImageView
    android:id="@+id/avator_imv"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:src="@drawable/avator_fail"
    android:layout_marginTop="36dp"
    />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:textColor="@color/homepage_txt_black"
    android:textSize="12sp"
    android:text="修改头像"/>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="38dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="26dp"
      android:textColor="@color/homepage_txt_gray"
      android:textSize="17sp"
      android:text="ID    "/>
    <TextView
      android:id="@+id/buble_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="14dp"
      android:textColor="@color/homepage_txt_gray"
      android:textSize="17sp"
      android:text="miracle"/>
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/homepage_txt_gray"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="2dp"
    />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/homepage_txt_gray"
      android:textSize="17sp"
      android:text="昵称"/>
    <TextView
      android:id="@+id/nickname_et"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_marginLeft="14dp"
      android:background="@null"
      android:singleLine="true"
      android:textColor="@color/homepage_txt_black"
      android:textSize="17sp"
      android:text="miracle"/>
    <ImageView
      android:id="@+id/nickname_edit_imv"
      android:layout_width="23dp"
      android:layout_height="23dp"
      android:padding="4dp"
      android:src="@drawable/icon_edit"
      />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/homepage_txt_gray"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="5dp"
    />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="30dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/homepage_txt_gray"
      android:textSize="17sp"
      android:text="简介"/>
    <TextView
      android:id="@+id/descrip_tv"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_marginLeft="14dp"
      android:singleLine="true"
      android:background="@null"
      android:textColor="@color/homepage_txt_black"
      android:textSize="17sp"
      android:text="miracle"/>
    <ImageView
      android:id="@+id/descrip_edit_imv"
      android:layout_width="23dp"
      android:layout_height="23dp"
      android:padding="4dp"
      android:src="@drawable/icon_edit"
      />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/homepage_txt_gray"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="5dp"
    />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <Button
      android:id="@+id/logout_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/homepage_gray_shape"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="46dp"
      android:paddingRight="65dp"
      android:paddingLeft="65dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:textSize="20sp"
      android:textColor="@color/white"
      android:text="退出登录"/>
  </RelativeLayout>

</LinearLayout>