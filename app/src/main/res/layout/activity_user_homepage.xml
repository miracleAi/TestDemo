<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
  android:gravity="center_horizontal">
  <ImageView
    android:id="@+id/avator_imv"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:src="@drawable/avator_fail"
    android:layout_marginTop="24dp"
    />
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/gender_imv"
      android:layout_width="10dp"
      android:layout_height="14dp"
      android:src="@drawable/icon_female"
      />
    <TextView
      android:id="@+id/nickname_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="4dp"
      android:textSize="17sp"
      android:textColor="@color/homepage_txt_black"
      android:text="陈小小小年"
      />
  </LinearLayout>
  <TextView
    android:id="@+id/bubble_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:textColor="@color/homepage_txt_black"
    android:textSize="14sp"
    android:text="泡泡号：chennnn"
    />
  <TextView
    android:id="@+id/descrip_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:textColor="@color/homepage_txt_black"
    android:textSize="12sp"
    android:text="简介：大脸猫大脸猫爱吃鱼"
    />
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="161dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
      android:id="@+id/friend_root_tv"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_marginTop="22dp"
      android:background="@drawable/homepage_btn_shape"
      android:gravity="center"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:paddingBottom="6dp"
      android:paddingTop="6dp"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:text="陈陈陈小年"
      />
    <LinearLayout
      android:id="@+id/friend_middle_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">
      <View
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:background="@color/homepage_bg_orange"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/homepage_txt_gray"
        android:textSize="10sp"
        android:text="好友"
        />
      <View
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:background="@color/homepage_bg_orange"/>

      <TextView
        android:id="@+id/friend_middle_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/homepage_btn_shape"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="陈小年"
        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/top_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">
      <View
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:background="@color/homepage_bg_orange"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/homepage_txt_gray"
        android:textSize="10sp"
        android:text="好友"
        />
      <View
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:background="@color/homepage_bg_orange"/>

      <TextView
        android:id="@+id/friend_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/homepage_btn_shape"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="陈小年"
        />
    </LinearLayout>
  </LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <Button
      android:id="@+id/friend_add_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="35dp"
      android:paddingTop="11dp"
      android:paddingBottom="11dp"
      android:paddingLeft="74dp"
      android:paddingRight="74dp"
      android:background="@drawable/homepage_red_shape"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text="添加好友"
      />
  </RelativeLayout>

</LinearLayout>